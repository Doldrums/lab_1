#include <iostream>
#include <cmath>
using namespace std;
int main() {
  cout << "Please, write your coordinates:";
  float x1, y1, x2, y2, x3, y3;
  cin>> x1 >> y1 >> x2 >> y2 >> x3 >> y3;
  float S = abs(0.5*((x1-x3)*(y2-y3)-(x2-x3)*(y1-y3)));
  if(S!=0) cout<<S;
  else cout<<"Triangle  doesn't exist :(";
  return 0;
}
